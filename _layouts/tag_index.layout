---
layout: default
body: blog archive
leftboxes: ["MainLeft.inc", "BlogFeed.inc" ]
---
<div id="content">
	<div id="blog-posts">
		{% for post in site.tags[page.tag] %}
		<div class="post{% if forloop.first %} first{% endif %}">
			<h2 class="post-title"><a href="{{ post.url }}">{{ post.title }}</a></h2>
			<div class="post-meta">
				<span class="date"><img src="/images/ico_calendar.png" alt="" />{{ post.date | date_to_string }} | </span>
				<span class="categories">
					<img src="/images/ico_drawer.png" alt="" />
					Tags: {% for tag in post.tags limit: 3 %}<a href="/tags/{{tag | replace:' ', '-' | downcase }}">{{ tag }}{% if forloop.last == false %},{%endif %}</a>&nbsp;{% endfor %}
				</span>
			</div>
			<!-- {{ post.content | markdownify | html_truncatewords }} <a class="more-link" href="{{ post.url }}">Read More&hellip;</a> -->
		</div><!-- end: .post -->
		{% endfor %}
	</div>
</div>